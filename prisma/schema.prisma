generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Galaxys {

  id          String    @id @default(uuid())
  name        String
  description String
  color       String
  size        Decimal
  planets     Planets[]

  @@map("galaxys")
}

model Planets {
  id          String  @id @default(uuid())
  name        String
  description String
  size        Decimal

  galaxyId       Galaxys? @relation(fields: [galaxyGalaxyId], references: [id])
  galaxyGalaxyId String?

  @@map("planets")
}
